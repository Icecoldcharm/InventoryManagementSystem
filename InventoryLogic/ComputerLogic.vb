Imports InventoryData

Public Class ComputerLogic
    Implements IDisposable

    Public Function GetComputersForRoom(ByVal rm As Room, byval ctx as InventoryEntities) As List(Of Computer)
        Try
            Return ctx.Computers.Where(Function(pc) pc.RoomID = rm.ID)
        Catch ex As Exception
            MsgBox(ex.ToString)
            Return Nothing
        End Try
    End Function


